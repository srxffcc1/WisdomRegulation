<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.wisdomregulation.allactivity.single.Activity_Welcome" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="168"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="44" />

        <TextView
            android:id="@+id/lawItem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="733"
            android:gravity="left|center_vertical"
            android:text="企业名称" />

        <TextView
            android:id="@+id/lawItemStatus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="201"
            android:gravity="left|center_vertical"
            android:text="整改状态" />

        <com.wisdomregulation.frame.AutoClickImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="55"
            android:scaleType="fitCenter"
            android:src="@drawable/dangerous_03" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="46" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#BDBDBD" >
    </LinearLayout>

</LinearLayout>