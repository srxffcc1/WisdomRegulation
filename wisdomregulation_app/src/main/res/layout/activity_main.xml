<org.kymjs.kjframe.widget.KJSlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_group"
    android:overScrollMode="never"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slide_back"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >



		<include
            android:id="@+id/main_menu"
            layout="@layout/activity_main_content2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#31808080" 
            />

       

        <include
            android:id="@+id/main_content"
            layout="@layout/activity_main_content" />
    </LinearLayout>

</org.kymjs.kjframe.widget.KJSlidingMenu>