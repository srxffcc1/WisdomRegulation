<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.wisdomregulation.allactivity.single.Activity_Welcome" >

    <LinearLayout
        android:id="@+id/removeview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="153"
            android:background="#2378BB"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="44"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="62"
                android:clickable="true"
                android:onClick="back"
                android:orientation="horizontal" >

                <com.wisdomregulation.frame.AutoClickImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="92"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/plan_02" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20" />

                <TextView
                    android:id="@+id/newtitle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="598"
                    android:gravity="left|center_vertical"
                    android:text="计划的检查详情"
                    android:textColor="@color/white" />
                            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="130" />

            <TextView
                android:id="@+id/more"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="190"
                android:clickable="true"
                android:onClick="toMore"
                android:textColor="@drawable/text_color_selector6"
                android:gravity="center"
                android:background="@drawable/seach_linearlayoutbg5"
                android:text="完成计划" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="32" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="44"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="#B2C0CB"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1429" >

            <ListView
                android:id="@+id/lawDetailList"
                android:divider="@null"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </ListView>
        </LinearLayout>

        <TextView
            android:id="@+id/planadd"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="145"
            android:background="#2378BB"
            android:clickable="true"
            android:onClick="addCompany"
            android:gravity="center"
            android:text="新增检查企业"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>