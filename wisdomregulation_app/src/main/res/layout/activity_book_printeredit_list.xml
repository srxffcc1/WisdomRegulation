<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="153"
        android:background="#2378BB"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="44"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="62"
            android:clickable="true"
            android:onClick="back"
            android:orientation="horizontal" >

            <com.wisdomregulation.frame.AutoClickImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="92"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/plan_02" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20" />

            <TextView
                android:id="@+id/newtitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="730"
                android:gravity="left|center_vertical"
                android:text="所有文书"
                android:textColor="@color/white" />

            <com.wisdomregulation.frame.PassLinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="230"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="190"
                    android:background="@drawable/seach_linearlayoutbg5"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="toMore"
                    android:text="全    选"
                    android:textColor="@drawable/text_color_selector6" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40" />
            </com.wisdomregulation.frame.PassLinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="44"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#B2C0CB"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/dataBookList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1547"
        android:scrollbars="none" >
    </ExpandableListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="145"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#2378BB"
            android:clickable="true"
            android:gravity="center"
            android:onClick="exports"
            android:visibility="gone"
            android:text="导出"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/inspect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#2378BB"
            android:clickable="true"
            android:gravity="center"
            android:onClick="prints"
            android:text="打印"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>